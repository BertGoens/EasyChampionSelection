<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    x:Name="wndMyClientOverload"
    x:Class="EasyChampionSelection.wndClientOverload"
    Height="40" Width="300" ShowInTaskbar="False" Topmost="True" WindowStyle="None" ShowActivated="False"
    IsVisibleChanged="wndMyClientOverload_IsVisibleChanged" ResizeMode="NoResize" Title="ECS lolClient Overlay" BorderBrush="#FFB8B8B8" BorderThickness="1">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFF9629" Offset="0"/>
                <GradientStop Color="#FFAF4B0B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ComboBox x:Name="cboGroups" 
                  HorizontalAlignment="Left" Margin="56,0,0,0" VerticalAlignment="Center" Width="230" Height="25" UseLayoutRounding="False" />
        <Label Content="Groups:" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" />
    </Grid>
</Window>
