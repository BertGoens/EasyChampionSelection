<Window x:Class="EasyChampionSelection.Helper_Windows.wndContactCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ECS Contact Creator"
        Icon="/EasyChampionSelection;component/Resources/LolIcon.jpg" 
        MinHeight="340"
        Height="340"
        MinWidth="300" 
        Width="300"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/MyWindowsDict.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Background="{StaticResource windowHelperBackground}">
        <DockPanel Margin="5">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <StackPanel Orientation="Vertical" Margin="5,10,0,0">
                    <Label Content="To:" />
                    <Label Content="From:" />
                    <Label Content="Password:" />
                    <Label Content="Subject:" />
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="5,10,0,0">
                    <Label Content="EasyChampionSelection@gmail.com" />
                    <TextBox x:Name="txtFromSender" Margin="0,2" Height="23" TextWrapping="Wrap" MinWidth="200" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" />
                    <PasswordBox x:Name="txtFromPassword" Margin="0,2" MinWidth="204" Height="23" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" />
                    <TextBox x:Name="txtSubject" Margin="0,2" Height="23" TextWrapping="Wrap" MinWidth="204" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" />
                </StackPanel>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" DockPanel.Dock="Bottom" Margin="8">
                <TextBox x:Name="txtBody" MinHeight="138" TextWrapping="Wrap" MinWidth="272" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto" />
                <Button x:Name="btnSendMail" Margin="0,10" Content="Send" Width="75" Click="btnSendMail_Click" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>